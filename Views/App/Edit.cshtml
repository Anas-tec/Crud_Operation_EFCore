@model Product
<h3>Edit Product</h3>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <p>
        <label>Name</label>
        <input asp-for="Name" />
    </p>
    <p>
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01S"/>
    </p>
    <input type="submit" value="Edit" />
</form>