@model List<Product>



<h2>Products</h2>
<a href="/App/Create">Create New Product</a>

<table border="1" cellpadding="5">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a href="/App/Edit/@item.Id">Edit</a> |
                <a href="/App/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
